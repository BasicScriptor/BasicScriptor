local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Made by Basic Scriptor", HidePremium = false, SaveConfig = true, ConfigFolder = "NegusFam"})

local MainTab = Window:MakeTab({
	Name = "Skin",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

MainTab:AddButton({
	Name = "Tangiro",
	Callback = function()
      		local args = {
    [1] = "Tangiro"
}

game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("Skis"):WaitForChild("InteractSki"):FireServer(unpack(args))

  	end    
})

MainTab:AddButton({
	Name = "Zaitama",
	Callback = function()
      		local args = {
    [1] = "Zaitama"
}

game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("Skis"):WaitForChild("InteractSki"):FireServer(unpack(args))

  	end    
})

MainTab:AddButton({
	Name = "Beorus",
	Callback = function()
      		local args = {
    [1] = "Beorus"
}

game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("Skis"):WaitForChild("InteractSki"):FireServer(unpack(args))

    end    
})

local NewTab = Window:MakeTab({
	Name = "Main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local toggleEnabled = false

NewTab:AddToggle({
    Name = "inf wins/energy",
    Default = false,
    Callback = function(Value)
        toggleEnabled = Value
        if toggleEnabled then
            while toggleEnabled do
                wait()
                game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("Gifts"):WaitForChild("RequestSpinReward"):InvokeServer()
            end
        end
    end
})


local toggleEnabled = false


NewTab:AddToggle({
    Name = "Inf spin",
    Default = false,
    Callback = function(Value)
        toggleEnabled = Value
        if toggleEnabled then
            while toggleEnabled do
                wait()
                local args = {
                    [1] = 10,
                    [2] = "Add"
                }
                game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("Gifts"):WaitForChild("UpdateSpins"):FireServer(unpack(args))
            end
        end
    end
})

local Tab1 = Window:MakeTab({
  Name = "AutoFarm",
  Icon = "rbxassetid://4483345998",
  PremiumOnly = false,
})

local autoClickEnabled = false

Tab1:AddToggle({
    Name = "AutoClick",
    Default = false,
    Callback = function(Value)
        autoClickEnabled = Value 
        if autoClickEnabled then
            _G.ghost = true
            while _G.ghost do
                wait()
                local args = { "Click38", "Desert" }
                game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("Training"):WaitForChild("Train"):FireServer(unpack(args))
            end
        else
            _G.ghost = false 
        end
    end
})
